{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.js"]
}
