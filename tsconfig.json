{
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/esm",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "jest"
    ]
  },
  "include": ["src"]
}
